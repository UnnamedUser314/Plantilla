<UserControl
    x:Class="LoginRegister.View.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:LoginRegister.ViewModel" 
    d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
    mc:Ignorable="d"
    Height="auto" Width="auto">

    <UserControl.Background>
        <ImageBrush ImageSource="/Resources/GreenBG.png" Stretch="UniformToFill" />
    </UserControl.Background>


    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">

        <Border
            Padding="30"
            CornerRadius="15"
            Background="#1E1E1E"
            BorderBrush="#444"
            BorderThickness="2"
            Width="350"
            HorizontalAlignment="Center">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Title -->
                <TextBlock 
                    Text="Iniciar Sesión" 
                    FontSize="26" 
                    FontWeight="Bold" 
                    Foreground="White" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,20"/>

                <!-- User Input -->
                <ui:TextBox
                    PlaceholderText="Usuario" 
                    Width="280"
                    Height="35"
                    Margin="0,5,0,10"
                    Background="White"
                    Foreground="Black"
                    Text="{Binding Name, Mode=TwoWay}" />

                <!-- Password Input -->
                <ui:PasswordBox 
                    PlaceholderText="Contraseña" 
                    Width="280"
                    Height="35"
                    Margin="0,5,0,10"
                    Background="White"
                    Password="{Binding PasswordView, Mode=TwoWay}" />

                <!-- Login Button -->
                <ui:Button 
                    Command="{Binding LoginCommand}"
                    Content="Iniciar Sesión"
                    Width="280"
                    Height="40"
                    Background="#4A90E2"
                    Foreground="White"
                    FontWeight="Bold"
                    CornerRadius="10"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0"/>

                <!-- Register Section -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBlock 
                        Text="¿No tienes una cuenta? " 
                        Foreground="White"/>

                    <TextBlock Foreground="#4A90E2" Cursor="Hand">
                        <Hyperlink Command="{Binding RegisterCommand}">
                            <Run Text="Regístrate aquí" />
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>

            </StackPanel>
        </Border>

    </Grid>
</UserControl>
 