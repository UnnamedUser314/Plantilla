<UserControl
    x:Class="LoginRegister.View.RegistroView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:LoginRegister.ViewModel" 
    d:DataContext="{d:DesignInstance Type=viewmodels:RegistroViewModel}"
    mc:Ignorable="d"
    Height="auto" Width="auto">

   
    <UserControl.Background>
        <ImageBrush ImageSource="/Resources/GreenBG.png" Stretch="UniformToFill" />
    </UserControl.Background>

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">

        <Border
            Padding="30"
            CornerRadius="15"
            Background="White"
            BorderBrush="#4A90E2"
            BorderThickness="2"
            Width="350"
            HorizontalAlignment="Center"
            Opacity="0.95">


            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
    
                <TextBlock 
                    Text="Registro de Usuario" 
                    FontSize="26" 
                    FontWeight="Bold" 
                    Foreground="Black" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,20"/>

          
                <TextBlock Text="Nombre Completo" Foreground="Black" FontSize="14" Margin="5,0"/>
                <ui:TextBox 
                    Width="280"
                    Height="35"
                    Background="White"
                    BorderBrush="#4A90E2"
                    BorderThickness="1"
                    Padding="10,5"
                    FontSize="14"
                    Text="{Binding Name, Mode=TwoWay}" />

            
                <TextBlock Text="Nombre de Usuario" Foreground="Black" FontSize="14" Margin="5,10,5,0"/>
                <ui:TextBox 
                    Width="280"
                    Height="35"
                    Background="White"
                    BorderBrush="#4A90E2"
                    BorderThickness="1"
                    Padding="10,5"
                    FontSize="14"
                    Text="{Binding UserName, Mode=TwoWay}" />

           
                <TextBlock Text="Correo Electrónico" Foreground="Black" FontSize="14" Margin="5,10,5,0"/>
                <ui:TextBox 
                    Width="280"
                    Height="35"
                    Background="White"
                    BorderBrush="#4A90E2"
                    BorderThickness="1"
                    Padding="10,5"
                    FontSize="14"
                    Text="{Binding Email, Mode=TwoWay}" />

              
                <TextBlock Text="Contraseña" Foreground="Black" FontSize="14" Margin="5,10,5,0"/>
                <ui:PasswordBox 
                    Width="280"
                    Height="35"
                    Background="White"
                    BorderBrush="#4A90E2"
                    BorderThickness="1"
                    Padding="10,5"
                    FontSize="14"
                    Password="{Binding Password, Mode=TwoWay}" />

               
                <ui:Button 
                    Command="{Binding RegistroCommand}"
                    Content="Registrarse"
                    Width="280"
                    Height="40"
                    Background="#67BF6A"
                    Foreground="White"
                    FontWeight="Bold"
                    CornerRadius="10"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"/>

                <ui:Button 
                    Command="{Binding VolverCommand}"
                    Content="Volver al Login"
                    Width="280"
                    Height="40"
                    Background="#012604"
                    Foreground="White"
                    FontWeight="Bold"
                    CornerRadius="10"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"/>

            </StackPanel>

        </Border>
    </Grid>
</UserControl>
